<%- include('../parents/header'); -%>

<div class="container">
  <h1 class="mb-4">Blog Articles</h1>
  <a href="/articles/new" class="btn btn-success"> New Article</a>
  <% articles.forEach(article => {%>
  <div class="card mt-4">
    <div class="card-body">
      <h4 class="card-title"><%= article.title %></h4>

      <div class="crad subtitle text-muted mb-2"><%= article.createDate %></div>

      <div class="text mb-2"><%= article.descrption %></div>
    </div>
  </div>
  <% }) %>
</div>
<%- include('../parents/footer'); -%>

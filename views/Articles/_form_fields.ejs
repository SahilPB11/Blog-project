<div class="form-froup">
  <label for="title" class="mb-2">Text</label>
  <input
    required
    type="text"
    name="title"
    id="title"
    class="mb-2 form-control"
    value="<%= article.title %>"
  />
</div>
<div class="form-froup">
  <label for="description" class="mb-2">Description</label>
  <textarea name="description" id="description" class="form-control mb-2">
<%= article.description %></textarea
  >
</div>
<div class="form-froup">
  <label for="markdown" class="mb-2">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control mb-2">
<%= article.markdown %></textarea
  >
</div>

<a href="/" class="btn btn-secondary mt-2"> Cancel</a>
<button type="submit" class="btn btn-primary mt-2">Save</button>
